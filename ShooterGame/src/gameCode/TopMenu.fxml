<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameCode.InitializeGame">
    <children>
        <BorderPane prefHeight="720" prefWidth="1280">
            <center>
                <Pane fx:id="gameWindow" prefHeight="720" prefWidth="1280" BorderPane.alignment="CENTER" />
            </center>
            <top>
                <MenuBar fx:id="topbar" BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="New Game" />
                                <MenuItem mnemonicParsing="false" text="Load Game" />
                                <MenuItem mnemonicParsing="false" text="Custom Game" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Credits" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Exit Game" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Quicksaving">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Quicksave F5" />
                                <MenuItem mnemonicParsing="false" text="Quicksave F9" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" onAction="#changeFullscreen" text="Fullscreen (F12)">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#changeFullscreen" text="Fullscreen" />
                            </items></Menu>
                    </menus>
                </MenuBar>
            </top></BorderPane>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <AnchorPane layoutY="65.0" prefHeight="79.0" prefWidth="1280.0" />
            </children>
        </AnchorPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>