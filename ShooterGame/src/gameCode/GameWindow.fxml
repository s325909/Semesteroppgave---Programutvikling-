<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="720.0" prefWidth="1280.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameCode.InitializeGame">
   <children>
      <BorderPane prefHeight="509.0" prefWidth="589.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
         <center>
            <Pane fx:id="gameWindow" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <MenuBar fx:id="topbar" BorderPane.alignment="CENTER">
              <menus>
                  <Menu mnemonicParsing="false" text="File">
                      <items>
                          <MenuItem mnemonicParsing="false" text="New Game" />
                          <MenuItem mnemonicParsing="false" text="Load Game" />
                          <MenuItem mnemonicParsing="false" text="Custom Game" />
                          <SeparatorMenuItem mnemonicParsing="false" />
                          <MenuItem mnemonicParsing="false" text="Credits" />
                          <SeparatorMenuItem mnemonicParsing="false" />
                          <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Exit Game" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Quicksaving">
                      <items>
                          <MenuItem mnemonicParsing="false" text="Quicksave F5" />
                          <MenuItem mnemonicParsing="false" text="Quicksave F9" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Fullscreen (F12)">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#changeFullScreen" text="Fullscreen" />
                      </items>
                  </Menu>
              </menus>
            </MenuBar>
         </top>
         <bottom>
            <FlowPane prefHeight="1.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="34.0" prefWidth="180.0" />
               </children>
            </FlowPane>
         </bottom>
      </BorderPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
