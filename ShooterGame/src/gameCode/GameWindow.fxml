<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" prefHeight="720.0" prefWidth="1280.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameCode.InitializeGame">
    <stylesheets><URL value="@StyleGameWindow.css" /></stylesheets>

    <children>
        <Pane fx:id="gameWindow" prefHeight="700.0" prefWidth="1280.0" />
      <BorderPane prefHeight="509.0" prefWidth="589.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
         <top>
            <MenuBar fx:id="topbar" nodeOrientation="LEFT_TO_RIGHT" prefHeight="8.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
              <menus>
                  <Menu mnemonicParsing="false" text="File">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#startNewGame" text="New Game" />
                          <MenuItem mnemonicParsing="false" text="Load Game" />
                          <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save Game" />
                          <MenuItem mnemonicParsing="false" text="Custom Game" />
                          <SeparatorMenuItem mnemonicParsing="false" />
                          <MenuItem mnemonicParsing="false" text="Credits" />
                          <SeparatorMenuItem mnemonicParsing="false" />
                          <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Exit Game" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Quicksaving">
                      <items>
                          <MenuItem mnemonicParsing="false" text="Quicksave F5" />
                          <MenuItem mnemonicParsing="false" text="Quicksave F9" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Fullscreen (F12)">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#changeFullScreen" text="Fullscreen" />
                      </items>
                  </Menu>
              </menus>
            </MenuBar>
         </top>
         <bottom>
            <FlowPane prefHeight="32.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="65.0" prefWidth="7.0" />
                  <VBox fx:id="hp_sign" prefHeight="65.0" prefWidth="146.0">
                     <children>
                        <HBox prefHeight="0.0" prefWidth="146.0">
                           <children>
                              <ImageView fitHeight="60.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/Art/hp_sign.png" />
                                 </image>
                              </ImageView>
                              <HBox prefHeight="60.0" prefWidth="120.0">
                                 <children>
                                    <Text fx:id="playerHP" strokeType="OUTSIDE" strokeWidth="0.0" text="100" textAlignment="CENTER" wrappingWidth="77.13671875">
                                       <font>
                                          <Font size="40.0" />
                                       </font>
                                    </Text>
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children></VBox>
                  <VBox prefHeight="65.0" prefWidth="432.0" />
                  <VBox prefHeight="25.0" prefWidth="75.0">
                     <children>
                        <Text fx:id="magazineSize" strokeType="OUTSIDE" strokeWidth="0.0" text="0" wrappingWidth="131.13671875">
                           <font>
                              <Font size="40.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
                  <VBox prefHeight="0.0" prefWidth="98.0">
                     <children>
                        <Text fx:id="poolSize" strokeType="OUTSIDE" strokeWidth="0.0" text="0" wrappingWidth="46.171875">
                           <font>
                              <Font size="40.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </FlowPane>
         </bottom>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="gameOver" text="GAME OVER" textFill="#850c0c" visible="false">
                     <font>
                        <Font name="Copperplate Gothic Bold" size="96.0" />
                     </font>
                  </Label>
                  <Label fx:id="pause" text="Paused" textFill="#fffdfd" visible="false">
                     <font>
                        <Font name="Copperplate Gothic Bold" size="96.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>

      </BorderPane>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
</GridPane>
