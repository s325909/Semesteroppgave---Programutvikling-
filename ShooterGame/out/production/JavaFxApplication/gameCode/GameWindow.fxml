<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="center" hgap="10" prefHeight="720.0" prefWidth="1280.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameCode.InitializeGame">
    <stylesheets><URL value="@StyleGameWindow.css" /></stylesheets>

    <children>
      <BorderPane prefHeight="509.0" prefWidth="589.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
         <top>
            <MenuBar fx:id="topbar" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
              <menus>
                  <Menu mnemonicParsing="false" text="File">
                      <items>
                          <MenuItem mnemonicParsing="false" text="New Game" />
                          <MenuItem mnemonicParsing="false" text="Load Game" />
                          <MenuItem mnemonicParsing="false" text="Custom Game" />
                          <SeparatorMenuItem mnemonicParsing="false" />
                          <MenuItem mnemonicParsing="false" text="Credits" />
                          <SeparatorMenuItem mnemonicParsing="false" />
                          <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Exit Game" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Quicksaving">
                      <items>
                          <MenuItem mnemonicParsing="false" text="Quicksave F5" />
                          <MenuItem mnemonicParsing="false" text="Quicksave F9" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Fullscreen (F12)">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#changeFullScreen" text="Fullscreen" />
                      </items>
                  </Menu>
              </menus>
            </MenuBar>
         </top>
          <center>
              <Pane fx:id="gameWindow" prefHeight="0.0" prefWidth="1280.0" BorderPane.alignment="CENTER" />
          </center>
         <bottom>
            <FlowPane prefHeight="21.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="23.0" prefWidth="6.0" />
                  <VBox prefHeight="0.0" prefWidth="100.0" />
                  <VBox prefHeight="0.0" prefWidth="99.0" />
               </children>
            </FlowPane>
         </bottom>

      </BorderPane>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
</GridPane>
